<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/admin_temp/css/main.css">
</head>
<body>
    <!-- Main Section -->
    <section x-data="sidebarState">

        <!-- Side Bar-->
        <section x-cloak class="sidebar bg-white" :class="open || 'inactive'" x-init="init()">

            <!-- Icon And Name-->
            <div class="d-flex align-items-center justify-content-around justify-content-lg-center">
                <h4>Alireza Seyfi</h4>
                <i @@click="toggle" class="d-lg-none bi bi-x fs-3"></i>
            </div>

            <!-- Side Bar item-->
            <div class="mt-4 List-Item">
                <ul class="list-unstyled">

                    <!-- item -->
                    <li class="sidebar-item">
                        <a asp-page="/index" class="sidebar-link">
                            <i class="bi bi-speedometer2 ms-2"></i>
                            <span class="fs-8">داشبورد</span>
                        </a>
                    </li>

                    <!-- item -->
                    <li class="sidebar-item" x-data="dropdown">

                        <div @@click="toggle" class="sidebar-link">
                            <i class="bi bi-basket2 ms-2"></i>
                            <span class="fs-8">محصولات</span>
                            <i class="bi bi-chevron-down me-auto"></i>
                        </div>

                        <ul x-show="open" x-transition class="submenu list-unstyled">

                            <li class="submenu-item">
                                <a asp-page="/Shop/ProductCategories/index" class="fs-8">دسته بندی</a>
                            </li>

                            <li class="submenu-item">
                                <a asp-page="/Shop/Product/index" class="fs-8">محصولات</a>
                            </li>

                            <li class="submenu-item">
                                <a asp-page="/Shop/ProductPicture/index" class="fs-8">گالری محصولات</a>
                            </li>
                        </ul>

                    </li>
                </ul>
            </div>

        </section>

        <!-- Main-->
        <section class="main" :class="open || 'active'">

            <!-- Header-->
            <header class="header position-sticky top-0 z-1 d-flex justify-content-between align-items-center p-2 bg-blueC">

                <div>
                    <i @@click="toggle" class="bi bi-justify fs-3 cursor-pointer text-white"></i>
                </div>

                <div class="d-flex ">

                    <!-- DropDown 1-->
                    <div class="dropdown">
                        <div class=" dropdown-toggle text-white" type="button" data-bs-toggle="dropdown"
                             aria-expanded="false">
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-pink fs-10">
                                9+
                            </span>
                            <i class="bi bi-envelope fs-5 text-white"></i>
                        </div>
                        <ul class="dropdown-menu text-end fs-8 bs-dropdown-min-width">
                            <li><a class="dropdown-item" href="#">لورم ایپسوم</a></li>
                            <li><a class="dropdown-item" href="#">لورم ایپسوم</a></li>
                        </ul>
                    </div>

                    <!-- DropDown 2-->
                    <div class="dropdown mx-3">
                        <div class=" dropdown-toggle text-white" type="button" data-bs-toggle="dropdown"
                             aria-expanded="false">
                            <i class="bi bi-bell fs-5 text-white"></i>
                        </div>
                        <ul class="dropdown-menu text-end fs-8 bs-dropdown-min-width">
                            <li><a class="dropdown-item" href="#">لورم ایپسوم</a></li>
                            <li><a class="dropdown-item" href="#">لورم ایپسوم</a></li>
                        </ul>
                    </div>

                    <!-- DropDown 3-->
                    <div class="dropdown">
                        <div class="dropdown-toggle profile text-white d-flex align-items-center" type="button"
                             data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/admin_temp/images/7.jpg" alt="" class="rounded-circle" width="30" height="30">
                            <div class="mx-1">
                                <h6 class="fs-8 m-0">علیرضا صیفی</h6>
                            </div>
                        </div>
                        <ul class="dropdown-menu start-0 text-end fs-8 bs-dropdown-min-width">
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-1 text-gray-600" href="#">
                                    <i class="bi bi-person-fill fs-6"></i>
                                    ورود
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-1 text-gray-600" href="#">
                                    <i class="bi bi-person-fill fs-6"></i>
                                    ورود
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-1 text-gray-600" href="#">
                                    <i class="bi bi-person-fill fs-6"></i>
                                    ورود
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </header>

            <!-- Content-->
            <div class="content">
                <div class="container-fluid">
                    <div class="row g-4 py-3">

                        @RenderBody()

                    </div>
                </div>
            </div>

        </section>

    </section>

    <!-- Js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Alpine Js-->
    <script defer src="~/admin_temp/js/alpine.js"></script>
    <script>
               document.addEventListener('alpine:init', () => {
            Alpine.data('sidebarState', () => ({
                open: window.innerWidth > 992,
                toggle() { this.open = !this.open },
                init() {
                    const currentPath = window.location.pathname.toLowerCase();
                    document.querySelectorAll(".sidebar-item, .submenu-item").forEach((li) => {
                        const link = li.querySelector("a");
                        if (!link) return;
                        const href = link.getAttribute("href").toLowerCase();
                        if (currentPath.endsWith(href)) {
                            let parentDropdown = li.closest('[x-data="dropdown"]');
                            while (parentDropdown) {
                                parentDropdown.classList.add("active");
                                if (parentDropdown.__x) parentDropdown.__x.$data.open = true;
                                parentDropdown = parentDropdown.parentElement.closest('[x-data="dropdown"]');
                            }
                            li.classList.add("active");
                            link.classList.add("active");
                        }
                    });
                }
            }));

            Alpine.data('dropdown', () => ({
                open: false,
                toggle() { this.open = !this.open }
            }));
        });

    </script>

    <!-- Pre Counter-->
    <script src="~/admin_temp/js/purecounter_vanilla.js"></script>
    <script>new PureCounter();</script>

    <!--Sidebar Active Class-->
    <script>
        document.addEventListener('alpine:init', () => {

            // مدیریت باز/بسته شدن سایدبار
            Alpine.data('toggleSidebar', () => ({
                open: window.innerWidth <= 992 ? false : true,
                toggle() { this.open = !this.open }
            }));

            // مدیریت dropdown ها
            Alpine.data('dropdown', () => ({
                open: false,
                toggle() { this.open = !this.open }
            }));

            // مدیریت فعال‌سازی لینک‌ها و باز کردن منوها
            Alpine.data('sidebar', () => ({
                open: true,
                toggleSidebar() { this.open = !this.open; },

                init() {
                    const currentPath = window.location.pathname.toLowerCase();

                    document.querySelectorAll(".sidebar-item, .submenu-item").forEach((li) => {
                        const link = li.querySelector("a");
                        if (!link) return;

                        const href = link.getAttribute("href").toLowerCase();

                        if (currentPath.endsWith(href)) {
                            // باز کردن تمام والدهای dropdown تا ریشه
                            let parentDropdown = li.closest('[x-data="dropdown"]');
                            while (parentDropdown) {
                                parentDropdown.classList.add("active");
                                if (parentDropdown.__x) {
                                    parentDropdown.__x.$data.open = true;
                                }
                                parentDropdown = parentDropdown.parentElement.closest('[x-data="dropdown"]');
                            }

                            li.classList.add("active");
                            link.classList.add("active");

                        } else {
                            li.classList.remove("active");
                            link.classList.remove("active");
                        }
                    });
                }
            }));

        });
    </script>


    @RenderSection("Scripts", false)
</body>

</html>