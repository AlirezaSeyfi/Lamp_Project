    <!-- Alpine Js-->
    <script defer src="~/admin_temp/js/alpine.js"></script>
    <script>
               document.addEventListener('alpine:init', () => {
            Alpine.data('sidebarState', () => ({
                open: window.innerWidth > 992,
                toggle() { this.open = !this.open },
                init() {
                    const currentPath = window.location.pathname.toLowerCase();
                    document.querySelectorAll(".sidebar-item, .submenu-item").forEach((li) => {
                        const link = li.querySelector("a");
                        if (!link) return;
                        const href = link.getAttribute("href").toLowerCase();
                        if (currentPath.endsWith(href)) {
                            let parentDropdown = li.closest('[x-data="dropdown"]');
                            while (parentDropdown) {
                                parentDropdown.classList.add("active");
                                if (parentDropdown.__x) parentDropdown.__x.$data.open = true;
                                parentDropdown = parentDropdown.parentElement.closest('[x-data="dropdown"]');
                            }
                            li.classList.add("active");
                            link.classList.add("active");
                        }
                    });
                }
            }));

            Alpine.data('dropdown', () => ({
                open: false,
                toggle() { this.open = !this.open }
            }));
        });

    </script>

    <!-- Pre Counter-->
    <script src="~/admin_temp/js/purecounter_vanilla.js"></script>
    <script>new PureCounter();</script>

    <!--Sidebar Active Class-->
    <script>
        document.addEventListener('alpine:init', () => {

            // مدیریت باز/بسته شدن سایدبار
            Alpine.data('toggleSidebar', () => ({
                open: window.innerWidth <= 992 ? false : true,
                toggle() { this.open = !this.open }
            }));

            // مدیریت dropdown ها
            Alpine.data('dropdown', () => ({
                open: false,
                toggle() { this.open = !this.open }
            }));

            // مدیریت فعال‌سازی لینک‌ها و باز کردن منوها
            Alpine.data('sidebar', () => ({
                open: true,
                toggleSidebar() { this.open = !this.open; },

                init() {
                    const currentPath = window.location.pathname.toLowerCase();

                    document.querySelectorAll(".sidebar-item, .submenu-item").forEach((li) => {
                        const link = li.querySelector("a");
                        if (!link) return;

                        const href = link.getAttribute("href").toLowerCase();

                        if (currentPath.endsWith(href)) {
                            // باز کردن تمام والدهای dropdown تا ریشه
                            let parentDropdown = li.closest('[x-data="dropdown"]');
                            while (parentDropdown) {
                                parentDropdown.classList.add("active");
                                if (parentDropdown.__x) {
                                    parentDropdown.__x.$data.open = true;
                                }
                                parentDropdown = parentDropdown.parentElement.closest('[x-data="dropdown"]');
                            }

                            li.classList.add("active");
                            link.classList.add("active");

                        } else {
                            li.classList.remove("active");
                            link.classList.remove("active");
                        }
                    });
                }
            }));

        });
    </script>

