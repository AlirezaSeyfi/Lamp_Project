                                                </ul>
                                            </div>

                                            <div>
                                                <a class="btn btn-outline-success fs-8 openModalLinkIncrease" data-id="@item.Id">افزایش موجودی</a>
                                            </div>
                                            <div>
                                                <a class="btn btn-outline-danger fs-8 openModalLinkReduce" data-id="@item.Id">کاهش موجودی</a>
                                            </div>
                                        </div>
                                    </td> *@
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-bs-dismiss="modal"
