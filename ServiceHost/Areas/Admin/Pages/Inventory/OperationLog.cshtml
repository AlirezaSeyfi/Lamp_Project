<div class="modal" id="OperationLog" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header justify-content-between dir-ltr">
                <button type="button" class="btn-close m-0" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                <h4 class="modal-title">سوابق گردش انبار</h4>
            </div>

            <div class="modal-body">
                <div class="table-responsive border border-1 rounded p-2">
                    <table class="table product table-rounded m-0 align-middle" id="PTable">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">تعداد</th>
                                <th scope="col">تاریخ عملیات</th>
                                <th scope="col">موجودی فعلی</th>
                                <th scope="col">عملگر</th>
                                <th scope="col">توضیحات</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="@(item.Operation ? "table-success":"table-danger")">
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Count</td>
                                    <td>@item.OperationDate</td>
                                    <td>@item.CurrentCount</td>
                                    <td>@item.Operator</td>
                                    <td>@item.Description</td>
