@using DiscountManagment.Application.Contract.CustomerDiscount
@model EditCustomerDiscount
@{

}
<!-- Modal Create -->
<div class="modal" id="edit" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header justify-content-between dir-ltr">
                <button type="button" class="btn-close m-0" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                <h4 class="modal-title mb-3">ویرایش تخفیف</h4>
            </div>

            <form asp-page="./Index" asp-page-handler="Edit" method="post" data-ajax="true" data-callback=""
                  data-action="Refresh" enctype="multipart/form-data">

                <input type="hidden" asp-for="Id" value="@Model.Id" />

                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ProductId" class="control-label">گروه محصول</label>
                                <select type="text" class="form-control fs-8" asp-for="ProductId" id="CategoryId" asp-items='new SelectList(Model.Products, "Id", "Name")'>
                                    <option value="0" selected>انتخاب محصول</option>
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger fs-8" id="errorCategory"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiscountRange" class="control-label">درصد تخفیف</label>
                                <input type="text" class="form-control" asp-for="DiscountRange"
                                       onchange="makeSlug('Name', 'Slug')">
                                <span asp-validation-for="DiscountRange" class="text-danger fs-8"></span>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label">تاریخ شروع</label>
                                <input type="text" class="form-control persianDate" asp-for="StartDate">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label">تاریخ پایان</label>
                                <input type="text" class="form-control persianDate" asp-for="EndDate">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Reason" class="control-label">علت تخفیف</label>
                                <input type="text" class="form-control" asp-for="Reason" accept="image/*">
                                <span asp-validation-for="Reason" class="text-danger fs-8"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-bs-dismiss="modal"
                            aria-label="Close">
                        بستن
                    </button>
                    <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".persianDate").pDatepicker({
            format: "YYYY/MM/DD",
            autoClose: true,
            calendar: {
                persian: true
            },
            navigator: {
                text: {
                    btnNextText: "بعدی",
                    btnPrevText: "قبلی"
                }
            },
            timezone: "Asia/Tehran", // تنظیم منطقه زمانی ایران
            initialDate: new Date() // تنظیم تاریخ اولیه به امروز
        });
    });
</script> 