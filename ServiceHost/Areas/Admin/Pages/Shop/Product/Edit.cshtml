@using ShopManagment.Application.Contracts.Product
@model EditProduct
@{

}
<!-- Modal Create -->
<div class="modal" id="edit" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header justify-content-between dir-ltr">
                <button type="button" class="btn-close m-0" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                <h4 class="modal-title mb-3">ویرایش محصول</h4>
            </div>

            <form asp-page="./Index" asp-page-handler="Edit" method="post" data-ajax="true" data-callback=""
                  data-action="Refresh" enctype="multipart/form-data">

                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="hidden" asp-for="ExistingPicturePath" value="@Model.ExistingPicturePath" />

                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">نام</label>
                                <input type="text" class="form-control" asp-for="Name"
                                       onchange="makeSlug('Name', 'Slug')">
                                <span asp-validation-for="Name" class="text-danger fs-8"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Code" class="control-label">کد</label>
                                <input type="text" class="form-control" asp-for="Code">
                                <span asp-validation-for="Code" class="text-danger fs-8"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label">گروه محصول</label>
                                <select type="text" class="form-control fs-8" asp-for="CategoryId" asp-items='new SelectList(Model.Categories, "Id", "Name")'>
                                    <option value="0" selected>گروه محصول ...</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger fs-8"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Picture" class="control-label">عکس</label>
                                <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PictureAlt" class="control-label">Alt</label>
                                <input type="text" class="form-control" asp-for="PictureAlt">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PictureTitle" class="control-label">عنوان</label>
                                <input type="text" class="form-control" asp-for="PictureTitle">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="ShortDescription" class="control-label">توضیحات کوتاه</label>
                                <textarea class="form-control autogrow" asp-for="ShortDescription"
                                          onchange="fillField('ShortDescription', 'MetaDescription')"
                                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="Description" class="control-label">توضیحات</label>
                                <textarea class="form-control autogrow" asp-for="Description" style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="KeyWords" class="control-label">کلمه کلیدی</label>
                                <input type="text" class="form-control" asp-for="KeyWords">
                                <span asp-validation-for="KeyWords" class="text-danger fs-8"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Slug" class="control-label">اسلاگ</label>
                                <input type="text" class="form-control" asp-for="Slug">
                                <span asp-validation-for="Slug" class="text-danger fs-8"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                                <textarea class="form-control autogrow" asp-for="MetaDescription"
                                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                <span asp-validation-for="MetaDescription" class="text-danger fs-8"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-bs-dismiss="modal"
                            aria-label="Close">
                        بستن
                    </button>
                    <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
       function formatNumber(inputId) {
        const input = document.getElementById(inputId);

        function formatInput() {
            let value = input.value.replace(/\D/g, '');
            if (value) {
                input.value = Number(value).toLocaleString();
            } else {
                input.value = '';
            }
        }

        function cleanNumber() {
            input.value = input.value.replace(/,/g, '');
        }

        window.addEventListener("DOMContentLoaded", formatInput);
        input.addEventListener("input", formatInput);
        input.closest('form').addEventListener("submit", cleanNumber);
    }

        // فراخوانی تابع برای UnitPrice
    formatNumber('UnitPrice');
</script>
